# Config file for the AFQMC package
# It defines the following variables
#   AFQMC_COMPILER              - compiler for AFQMC
#   AFQMC_MPIEXEC               - mpi executable for AFQMC
#   AFQMC_MPIEXEC_NUMPROC_FLAG  - mpi number of process flag for AFQMC
#   AFQMC_FLAGS                 - compiler flags for AFQMC
#   AFQMC_DEFINITIONS           - definition for AFQMC
#   AFQMC_INCLUDE_DIRS          - include directories for AFQMC
#   AFQMC_LIBRARIES             - libraries to link against
#   COMMON_LIBRARIES            - libraries to link against
#   LANCZOS_LIBRARIES           - libraries to link against
#   GTESTMAINHAO_LIBRARIES      - libraries to link against, link with other *LIBRARIES.

get_filename_component(AFQMC_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" DIRECTORY)

set(AFQMC_COMPILER @CMAKE_CXX_COMPILER@)

set(AFQMC_MPIEXEC @MPIEXEC@ )

set(AFQMC_MPIEXEC_NUMPROC_FLAG @MPIEXEC_NUMPROC_FLAG@ )

set(AFQMC_FLAGS "@CMAKE_CXX_FLAGS@")

set(AFQMC_DEFINITIONS @EXT_DEFINITIONS@)

set(AFQMC_INCLUDE_DIRS @EXT_INCLUDE_DIRS@ ${AFQMC_CMAKE_DIR}/../include)

set(DEPENDENCE_LIBRARIES @EXT_LIBRARIES@)

include("${AFQMC_CMAKE_DIR}/gtestMainHaoTargets.cmake")
set(GTESTMAINHAO_LIBRARIES gtest_mainHao)

include("${AFQMC_CMAKE_DIR}/commonHaoTargets.cmake")
set(COMMON_LIBRARIES commonHao ${DEPENDENCE_LIBRARIES})

include("${AFQMC_CMAKE_DIR}/lanczosHaoTargets.cmake")
set(LANCZOS_LIBRARIES lanczosHao commonHao ${DEPENDENCE_LIBRARIES})

set(AFQMC_LIBRARIES lanczosHao commonHao ${DEPENDENCE_LIBRARIES})

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(afqmc  DEFAULT_MSG
                                  AFQMC_LIBRARIES AFQMC_INCLUDE_DIRS)
if(NOT AFQMC_FOUND)
  MESSAGE ("-- In order to find AFQMC, please define AFQMC_DIR ='/path/to/AFQMC' ")
endif()